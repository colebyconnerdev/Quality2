<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/settings_server_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_underline"
        android:text="Server Settings"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/fragment_settings" />

    <TextView
        android:id="@+id/settings_domain_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domain"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_domain"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/settings_domain"/>

    <EditText
        android:id="@+id/settings_domain"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="#E8E8E8"
        android:ems="10"
        android:inputType="none"
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_server_head" />

    <EditText
        android:id="@+id/settings_server"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:background="#E8E8E8"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_domain" />

    <TextView
        android:id="@+id/settings_server_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Server IP"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_server"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/settings_server" />

    <EditText
        android:id="@+id/settings_root"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="#E8E8E8"
        android:ems="10"
        android:inputType="none"
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_server" />

    <TextView
        android:id="@+id/settings_root_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_root"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/settings_root"/>

    <TextView
        android:id="@+id/settings_user_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_underline"
        android:text="User Settings"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_root" />

    <EditText
        android:id="@+id/settings_username"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:background="#E8E8E8"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_user_head" />

    <EditText
        android:id="@+id/settings_password"
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:background="#E8E8E8"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_username" />

    <TextView
        android:id="@+id/settings_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_username"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/settings_username"/>

    <TextView
        android:id="@+id/settings_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settings_password"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toTopOf="@+id/settings_password" />

    <CheckBox
        android:id="@+id/settings_rememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remember Me"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintTop_toBottomOf="@+id/settings_password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_settings"
        app:layout_constraintRight_toRightOf="@+id/fragment_settings"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_settings"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settings_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

        <Button
            android:id="@+id/settings_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="OK" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
